{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "inputQuery": {
      "type": "string",
      "description": "Original query provided by the user"
    },
    "contextSummary": {
      "type": ["string", "null"],
      "description": "Pre-composed context summary including selection, history and voice metadata"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata used to guide optimization",
      "properties": {
        "voiceCommand": { "type": ["string", "null"] },
        "voiceTranscript": { "type": ["string", "null"] },
        "selectedText": { "type": ["string", "null"] },
        "userContext": { "type": ["object", "null"] },
        "researchHistoryCount": { "type": "integer", "minimum": 0 },
        "sessionId": { "type": ["string", "null"] }
      },
      "required": [],
      "additionalProperties": false
    }
  },
  "required": ["inputQuery"],
  "additionalProperties": false
}
