{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "candidates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "query": { "type": "string" },
          "coverageScore": { "type": "number", "minimum": 0, "maximum": 1 },
          "coverageExplanation": { "type": "string" },
          "addedAspects": {
            "type": "array",
            "items": { "type": "string" }
          },
          "improvementReason": { "type": "string" },
          "suggestedFollowups": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["id", "query", "coverageScore", "coverageExplanation"],
        "additionalProperties": false
      }
    },
    "evaluationSummary": { "type": "string" },
    "recommendedCandidateId": { "type": "string" }
  },
  "required": ["candidates"],
  "additionalProperties": false
}
