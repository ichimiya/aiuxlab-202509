{
  "name": "ai-research-poc",
  "version": "0.1.0",
  "private": true,
  "description": "AI時代の新しいリサーチ体験を探索する実験的POC",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm generate:api && next build --turbopack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "pnpm lint && pnpm format:check && pnpm type-check",
    "fix": "pnpm lint:fix && pnpm format",
    "generate:api": "orval",
    "generate:watch": "orval --watch",
    "test": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.883.0",
    "@aws-sdk/client-transcribe": "^3.883.0",
