    "@aws-sdk/credential-providers": "^3.883.0",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.1",
    "axios": "^1.11.0",
    "dompurify": "^3.2.6",
    "ioredis": "^5.7.0",
    "marked": "^16.2.1",
    "next": "15.5.2",
    "openai": "^5.19.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "three": "^0.180.0",
    "use-debounce": "^10.0.0",
    "zod": "^4.1.5",
    "zod-to-json-schema": "^3.24.6",
    "zustand": "^5.0.8"
